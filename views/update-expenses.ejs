<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Input Form</title>
    <link rel="stylesheet" href="/styles/inputform.css">
</head>

<body>
    <div class="container">
        <div class="card">
            <div class="login">
                <h1>Add expense details</h1>
                <div class="login-box">
                    <form action="/updateexpense" method="post" encType="multipart/form-data">
                        <div class="items">
                            <div class="user-box">
                                <div class="dropdown">
                                    <select class="dropdown-select" required name="inputFormCategory">
                                        <option>Select Category</option>
                                        <option>Grocery</option>
                                        <option>Entertainment</option>
                                        <option>Utility</option>
                                    </select>
                                </div>
                            </div>
                            <div class="user-box">
                                <div class="dropdown">
                                    <select class="dropdown-select" required name="inputFormTags">
                                        <option>Select Tags</option>
                                        <option>Personal</option>
                                        <option>Business</option>
                                        <option>Family</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="items">
                            <div class="user-box" style="width: 200px;">
                                <input type="date" name="inputFormDate" required="" placeholder="">
                                <label>Date</label>
                            </div>
                            <div class="user-box">
                                <div class="dropdown" style="padding-top: 10px;">
                                    <select class="dropdown-select" required name="inputFormPaymentMethod">
                                        <option>Payment</option>
                                        <option>Cash</option>
                                        <option>Credit Card</option>
                                        <option>UPI</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="items">
                            <div class="user-box" style="width: 550px;">
                                <input type="number" value="<%= data.amount %>" name="inputFormAmount" required="" placeholder="">
                                <label>Amount</label>
                            </div>
                        </div>
                        <div class="items">
                            <div class="user-box" style="width: 550px;">
                                <input type="file" name="inputFormFile" required="" placeholder="" class="custom-file-input">
                            </div>
                        </div>
                        <div class="items">
                            <div class="items-inner">
                                <label for="">Description</label>
                                <div class="user-box">
                                    <p>Amount</p>
                                    <textarea class="form-control" name="inputFormTextArea" style="width: 520px;"
                                        required id="inputFormTextArea" rows="5"><%= data.description.trim() %>
                                    </textarea>
                                </div>
                            </div>
                        </div>
                        <div class="signup">
                            <button type="submit" class="btn">
                                <span></span>
                                <span></span>
                                <span></span>
                                <span></span>
                                submit
                              </button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>